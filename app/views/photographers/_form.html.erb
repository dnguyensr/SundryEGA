<%= form_for(photographer, :html => {class: "form-horizontal"}) do |f| %>
  <% if photographer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(photographer.errors.count, "error") %> prohibited this photographer from being saved:</h2>

      <ul>
      <% photographer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-photographer">
    <div class="form-group">
      <%= f.label "Handle (Required)" %>
      <%= f.text_field :handle, class:"form-control", placeholder: "Handle" %>
    </div>
    <div class="form-group">
      <%= f.label :profile %>
      <%= f.text_area :profile, rows: "4", class:"form-control", placeholder: "Profile blurb" %>
    </div>
    <div class="form-group">
      <%= f.label :avatar %>
      <%= f.text_field :avatar, class:"form-control", placeholder: "Avatar" %>
    </div>
    <div class="form-group">
      <%= f.label :flcikr %>
      <%= f.text_field :flickr, class:"form-control", placeholder: "Flickr URL" %>
    </div>
    <div class="form-group">
      <%= f.label :youtube %>
      <%= f.text_field :youtube, class:"form-control", placeholder: "Youtube URL" %>
    </div>
    <div class="form-group">
      <%= f.label :instagram %>
      <%= f.text_field :instagram, class:"form-control", placeholder: "Instagram URL" %>
    </div>
    <div class="form-group">
      <%= f.label :facebook %>
      <%= f.text_field :facebook, class:"form-control", placeholder: "Facebook URL" %>
    </div>
    <div class="form-group">
      <%= f.label :twitter %>
      <%= f.text_field :twitter, class:"form-control", placeholder: "Twitter URL" %>
    </div>
    <div class="form-group">
      <%= f.label :tistory %>
      <%= f.text_field :tistory, class:"form-control", placeholder: "Tistory URL" %>
    </div>

    <div class="actions text-center">
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
