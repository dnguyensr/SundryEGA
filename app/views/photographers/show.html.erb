<div class="container-fluid" id="gaming">
  <div class="container">
    <div class="row">
      <h1>Studio Sundry</h1>
      <hr>
      <div class="col-xs-12 col-sm-6 gaming-profile">
        <div class="row">
          <div class="col-xs-3">
            <%= image_tag(@photographer.avatar, class:"img-responsive")%>
          </div>
          <div class="col-xs-9">
            <h1 class="gamertag"><%= @photographer.handle %></h1>
            <p><%= @photographer.profile %></p>
            <p>Games Played: <%= @photographer.games %></p>
            <div class="sns">
              <%= link_to image_tag("icons/icon_twitch", alt:"twitch icon", class:"img-responsive sns-icon"), @photographer.twitch %>
              <%= link_to image_tag("icons/icon_youtube", alt:"youtube icon", class:"img-responsive sns-icon"), @photographer.youtube %>
              <%= link_to image_tag("icons/icon_twitter", alt:"twitter icon", class:"img-responsive sns-icon"), @photographer.twitter %>
              <%= link_to image_tag("icons/icon_instagram", alt:"instagram icon", class:"img-responsive sns-icon"), @photographer.instagram %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
