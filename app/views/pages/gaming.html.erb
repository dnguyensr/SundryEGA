<div class="container-fluid" id="gaming">
  <div class="container">
    <div class="row">
      <h1>Gaming</h1>
      <hr>
      <div class="col-xs-12 col-sm-6 gaming-profile">
        <div class="row">
          <div class="col-xs-3">
            <%= image_tag("icon_people", class:"img-responsive")%>
          </div>
          <div class="col-xs-9">
            <h1 class="gamertag">gamer tag</h1>
            <p>player info</p>
            <p>Games Played:</p>
            <div class="sns">
              <%= link_to image_tag("icons/icon_twitch", alt:"twitch icon", class:"img-responsive sns-icon"), root_path %>
              <%= link_to image_tag("icons/icon_youtube", alt:"youtube icon", class:"img-responsive sns-icon"), root_path %>
              <%= link_to image_tag("icons/icon_twitter", alt:"twitter icon", class:"img-responsive sns-icon"), root_path %>
              <%= link_to image_tag("icons/icon_instagram", alt:"instagram icon", class:"img-responsive sns-icon"), root_path %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
